{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "esModuleInterop": true,
    "declaration": true,
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "outDir": "./lib",
    "baseUrl": "."
  },
  "exclude": ["lib/**", "coverage/**", "vitest.config.ts"]
}
