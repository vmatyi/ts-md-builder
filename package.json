{
  "name": "ts-md-builder",
  "version": "1.3.2",
  "description": "A template for creating npm packages using TypeScript and VSCode",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vmatyi/ts-md-builder.git"
  },
  "license": "MIT",
  "main": "./lib/index.js",
  "files": [
    "lib/**"
  ],
  "scripts": {
    "build": "tsc --project tsconfig.build.json",
    "clean": "rm -rf ./lib/",
    "lint": "eslint ./src/",
    "prepare": "npm run build",
    "noemit": "tsc --noEmit",
    "test": "vitest run --coverage",
    "testloop": "vitest --coverage"
  },
  "author": {
    "name": "vmatyi",
    "url": "https://github.com/vmatyi"
  },
  "keywords": [
    "markdown",
    "builder",
    "template",
    "templateString",
    "template-string"
  ],
  "bugs": {
    "url": "https://github.com/vmatyi/ts-md-builder/issues"
  },
  "homepage": "https://github.com/vmatyi/ts-md-builder#readme",
  "config": {},
  "lint-staged": {
    "*.ts": "eslint --cache --cache-location .eslintcache --fix"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": []
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "@vitest/coverage-v8": "^2.1.8",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-es": "^4.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "prettier": "^2.8.7",
    "prettier-eslint": "^15.0.1",
    "ts-node": "^10.9.2",
    "vitest": "^2.1.8"
  }
}
